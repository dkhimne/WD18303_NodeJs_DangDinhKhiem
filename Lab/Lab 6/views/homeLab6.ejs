<%- include ('header.ejs') %>

    <div class="container" ng-app="appHTML">
        <div class="mb-3">
            <label for="" class="form-label">Name</label>
            <input type="text" ng-model="name" class="form-control" name="" id="" aria-describedby="helpId" placeholder="" />
            <small id="helpId" class="form-text text-muted">Ban vua nhap vao : {{name}}</small>
        </div>

        <div class="table-responsive" ng-controller="ListController">
            <table class="table table-striped table-hover table-borderless table-primary align-middle">
                <thead class="table-light">
                    <caption>
                        Table Name
                    </caption>
                    <tr>
                        <th>Title</th>
                        <th>Content</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider" ng-repeat="item in listData">
                    <tr class="table-primary">
                        <td scope="row">{{item.title}}</td>
                        <td>{{item.content}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('footer.ejs') %>