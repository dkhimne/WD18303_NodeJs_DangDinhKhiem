<%- include ('header.ejs') %>

<h1 class="text-center py-3">Thêm Sản Phẩm</h1>
<div class="container mt-5">
  <form action="/addpr" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="title" placeholder="Name">
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input type="text" class="form-control" id="price" name="price" placeholder="Price">
    </div>
    <div class="mb-3">
      <label for="describe" class="form-label">Description</label>
      <input type="text" class="form-control" id="describe" name="description" placeholder="Describe">
    </div>
    <div class="mb-3">
      <label for="img" class="form-label">Image</label>
      <input type="file" class="form-control" id="img" name="imageURL">
    </div>
    <button type="submit" class="btn btn-info">Add Product</button>
  </form>
</div>

<%- include('footer.ejs') %>
